<%- layout('/layouts/boilerplate')-%> 
<style>
 #filters{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
 }

 .filter{
  text-align: center;
  margin-right: 2rem;
  margin-top: 2rem;
  opacity: 0.7;
 }

 .filter:hover{
  opacity: 1;
  cursor: pointer;
 }
 .filter p {
  font-size: 0.8rem;

 }

 .tax-info{
  display: none;
 }

.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: auto;
  padding: 0.5rem 1rem;
  margin: 1rem auto 0;   /* center horizontally */
  display: inline-flex;  /* shrink to content */
  align-items: center;
  justify-content: center;
  width: auto;           /* donâ€™t stretch full row */
}


 /* Default (desktop/larger screens) */
#filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 1rem;
}

/* Mobile view */
@media (max-width: 768px) {
  #filters {
    flex-wrap: nowrap;         /* Prevent wrapping */
    overflow-x: auto;          /* Enable horizontal scroll */
    white-space: nowrap;       /* Keep items on one line */
    padding-bottom: 0.5rem;    /* Some space for scroll */
    -webkit-overflow-scrolling: touch; /* Smooth scroll on iOS */
  }

  .filter {
    flex: 0 0 auto;   /* Don't shrink, size based on content */
    margin-right: 1rem;
    margin-top: 0.5rem;
  }

  .tax-toggle {
    flex: 0 0 auto;   /* So it scrolls horizontally too */
    margin-left: 1rem;
  }
}

</style>
    
